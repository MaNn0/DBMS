#!/usr/bin/bash
echo -e "\n"
echo "*********** Welcome To Database Management System ***********"

echo -e ""

if [ -e ~/DBMS/Database ]
then
	cd ~/DBMS/Database
	#echo "DBMS is ready"
else
	mkdir ~/DBMS/Database
	cd ~/DBMS/Database
	#echo "DBMS is ready"
fi


COLUMNS=1
exit=true
while $exit
do

PS3="Choose an option: "
	select name in "create database" "remove database" "list database" "connect to a database" "exit"
	do
	echo 
		case $name in
        "create database")
        read -p "Please enter database name: " dbName
        if [[ -d $dbName ]] then
        		echo "Database is already exist"
        		echo
        	else
        		mkdir $dbName
        		echo "Database is created successfully"
        fi
        ;;
		"list database")
			ls -a
		;;
		"remove database")
		read -p "please enter database name to delete: " dbName
		        if [[ -d $dbName ]] then
		        rm -r $dbName
        		echo "Database deleted successfully"
        	else
        		echo "There is no database with this name"
        fi
		;;
		"connect to a database")
		read -p "Which database you want to access? " dbName
			cd $dbName
		;;
		"exit")
		exit=false
		break
		;;
		*)
		echo UNKNOWN USER
		esac	
	done

done
