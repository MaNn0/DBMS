#!/bin/bash

if [ ! -e ~/DBMS/Database ]; then
    mkdir Database
    cd ~/DBMS/Database
    else
    cd ~/DBMS/Database
fi

echo "welcome to DBMS"

exit=true
COLUMNS=1
while $exit; do

    PS3="Select Value"
    select name in "create database" "remove database" "list database" "connect to a database" "exit"; do
    
    case $name in
    "create database")
        read -p "enter database name: " dbName
        if [[ -e $dbName || ! -e "$tableName" ]]; then
            echo "Database exist or not valid"
        else
            mkdir "$dbName"
            echo "Database Created Successfully"
        fi
    ;;
    "remove database")
        read -p "Enter database name to delete: " dbName
        if [ -e $dbName ]; then
            rm -r $dbName
        else
            echo "Database doesn't exist or not valid"
        fi
    ;;
    "list database")
        ls
    ;;
    "connect to a database")
        read -p "enter database name: " dbName
        if [[ -e $dbName ]]; then
            # cd $dbName
            ../connect "$dbName"
        else
            echo "There is no database with this name"
        fi
    ;;
    "exit")
            exit=false
            break
    ;;
    *)
        echo "Unkown Value"
    esac
    done
done